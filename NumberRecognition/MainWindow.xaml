<Window x:Class="NumberRecognition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="900" Width="1500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Orientation="Vertical" Margin="5 5">
            <ComboBox Margin="0 0 0 10" SelectedIndex="1" Name="cbxCoupling">
                <ComboBoxItem Content="LOW" HorizontalAlignment="Stretch"/>
                <ComboBoxItem Content="NORMAL" HorizontalAlignment="Stretch"/>
                <ComboBoxItem Content="HIGH" HorizontalAlignment="Stretch"/>
            </ComboBox>
            <CheckBox Content="Save errordata" Margin="0 0 0 10" Name="cbSaveError"/>
            <Button  Content="Load" Margin="0 0 0 10" Click="Load_Click"/>
            <Button  Content="Load Error" Margin="0 0 0 10" Click="LoadError_Click"/>
            <Button  Content="Load Counter" Margin="0 0 0 10" Click="LoadCounter_Click"/>
            <Button  Content="Load All" Margin="0 0 0 10" Click="LoadAll_Click"/>
            <Button  Content="Segmentize" Margin="0 0 0 10" Click="Boxing_Click"/>
            <Button  Content="Train" Margin="0 0 0 10" Click="Train_Click"/>
            <Button  Content="Recognize" Margin="0 0 0 10" Click="Recognize_Click"/>
        </StackPanel>
        
        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible">
            <Grid Name="ContentGrid" Background="Wheat">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <!-- DYNAMICALLY ADD ELEMENTS -->
            </Grid>
        </ScrollViewer>
        
        </Grid>
</Window>
