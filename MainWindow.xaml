<Window x:Class="HexSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="950" Width="1400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Margin="5" Name="imgDisplay"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Capture" Margin="15 10" Padding="5 0" Click="onCaptureClicked" />
        </StackPanel>


    </Grid>
</Window>
